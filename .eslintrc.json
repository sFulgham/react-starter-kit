{
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "jest": true
    },
    "plugins": [
      "react",
      "babel"
    ],
    "rules": {
      "semi": 2,
      "babel/new-cap": 1,
      "babel/object-curly-spacing": 1,
      "babel/no-invalid-this": 1,
      "babel/semi": 1,
      "no-console": 1
    }
  }