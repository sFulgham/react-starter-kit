{
    "parser": "babel-eslint",
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
          "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "es6": true,
      "mocha": true,
      "jest": true
    },
    "plugins": [
      "react",
      "babel"
    ],
    "rules": {
      "react/prop-types": ["off"],
      "semi": 2,
      "babel/new-cap": 1,
      "babel/object-curly-spacing": 1,
      "babel/no-invalid-this": 1,
      "babel/semi": 1,
      "no-console": 1
    }
  }